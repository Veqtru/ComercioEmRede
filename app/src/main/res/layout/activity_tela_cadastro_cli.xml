<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:screenOrientation="portrait"
    tools:context=".activity.TelaCadastroCLI">


    <Button
        android:id="@+id/bttnCadastroCLI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botao_redondo_solido_azul"
        android:text="@string/cadastrar_cli"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.900" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="461dp"
        android:layout_height="240dp"
        android:contentDescription="@string/bgRC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/wave_bg_2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="299sp"
        android:layout_height="147sp"
        android:contentDescription="@string/logoRC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@drawable/logon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="abrirLoginCLI"
        android:text="@string/fazer_login"
        android:textColor="#0027FF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ja_possui_uma_conta"
        android:textColor="#6E6E6E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bttnCadastroCLI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.56">

        <EditText
            android:id="@+id/nomeCLI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:autofillHints=""
            android:drawableBottom="@drawable/linha_azul"
            android:hint="@string/nome"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:textColor="#000000"
            android:textColorHint="@color/colorSafeBlue"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/emailLoginCLI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:autofillHints=""
            android:drawableBottom="@drawable/linha_azul"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:textColor="#000000"
            android:textColorHint="@color/colorSafeBlue"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/senhaLoginCLI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""

            android:drawableBottom="@drawable/linha_azul"
            android:hint="@string/senhaCLI"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textColor="#000000"
            android:textColorHint="@color/colorSafeBlue"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/confirmarSenhaCLI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""

            android:drawableBottom="@drawable/linha_azul"
            android:hint="@string/confirmar_senhaCLI"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textColor="#000000"
            android:textColorHint="@color/colorSafeBlue"
            android:textSize="22sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
