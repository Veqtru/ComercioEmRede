<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#001d7e</item>
        <item name="colorPrimaryDark">#001361</item>
        <item name="android:titleTextColor">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="colorAccent">#001d7e</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#001d7e</item>
        <item name="colorPrimaryDark">#001361</item>
        <item name="colorAccent">#001d7e</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="ProgressBar" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#FFFFFF</item>

    </style>

    <style name="SearchViewTheme" parent="AppTheme">
        <item name="android:textColor">#321000FF</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
